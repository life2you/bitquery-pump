# API配置
PORT=3000
API_PROXY=http://your-proxy-url:8080  # 可选代理服务器

# Bitquery API 配置
BITQUERY_API_KEY=your_bitquery_api_key_here

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bitquery_pump
DB_USER=postgres
DB_PASSWORD=postgres

# 监控配置
MONITOR_INTERVAL=60000  # 监控间隔（毫秒）
MAX_RECONNECT_ATTEMPTS=10  # 最大重连次数

# 定时任务配置
AUTO_START_SCHEDULER=false  # 服务启动时是否自动启动定时任务
BUY_CRON_SCHEDULE="0 9 * * *"  # 买入任务执行时间，默认每天上午9点
SELL_CRON_SCHEDULE="0 15 * * *"  # 卖出任务执行时间，默认每天下午3点
HOLDING_CHECK_INTERVAL="0 * * * *"  # 持仓检查间隔，默认每小时
PERFORMANCE_REPORT_SCHEDULE="0 20 * * *"  # 绩效报告生成时间，默认每天晚上8点

# 交易模拟配置
SIMULATION_INITIAL_BALANCE=10000  # 模拟交易初始资金（USDC） 